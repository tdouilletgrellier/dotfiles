if [[ -x "$(command -v fzf)" ]]; then
	if [[ -x "$(command -v xdg-open)" ]]; then
		alias fzfpreview='xdg-open $(fzf --info=inline --preview="$PAGER {}")'
	else
		alias fzfpreview='edit $(fzf --info=inline --preview="$PAGER {}")'
	fi
fi

