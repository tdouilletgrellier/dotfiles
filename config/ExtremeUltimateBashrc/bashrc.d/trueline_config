				local bg_color='bright_white'
				local font_style='normal'
			;;

			([Ff]ree[Bb][Ss][Dd]*)
				local prompt_icon='ïŒŒ'
				local fg_color='freebsd'
				local bg_color='white'
				local font_style='normal'
			;;

			([Gg]entoo*)
				local prompt_icon='ïŒ'
